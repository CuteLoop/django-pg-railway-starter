# SECURITY
SECRET_KEY=django-insecure-dev-key

# DEBUG mode (True for development)
DEBUG=True

# Allowed hosts (usually localhost and 127.0.0.1)
ALLOWED_HOSTS=localhost,127.0.0.1

# DATABASE CONFIGURATION
# No need for DATABASE_URL if you prefer using SQLite (default behavior)
# DATABASE_URL can be omitted, and the settings will fallback to SQLite

# EMAIL CONFIGURATION (using the console backend for development)
# These settings are ignored in development as the console email backend is used.
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend