# SECURITY
SECRET_KEY=your_production_secret_key_here

# DEBUG mode (set to False for production)
DEBUG=False

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CSRF Trusted Origins (comma-separated list; no trailing slashes)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# DATABASE CONFIGURATION
# If using PostgreSQL via dj_database_url, provide the full URL in the following format:
# postgres://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgres://dbuser:dbpassword@dbhost:5432/dbname

# EMAIL CONFIGURATION (used when DEBUG=False)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@example.com
EMAIL_HOST_PASSWORD=your_email_password
